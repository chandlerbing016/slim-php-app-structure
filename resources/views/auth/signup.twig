{% extends 'template/default.twig' %}

{% block content %}
    <h4>Quick way to get connect to our app</h4>
    <div class="pure-g">
        <div class="pure-u-1-3">
            <form method="POST" action="{{ path_for('g.signup') }}" class="pure-form pure-form-stacked">
                <fieldset>
                    <p>Sign Up</p>
                    <div class="pure-control-group">
                        <label for="display-name">Username</label>
                        <input id="display-name" name="display-name" type="text" placeholder="Username" required>
                    </div>
                    <div class="pure-control-group">
                        <label for="email">Email Address</label>
                        <input id="email" name="email" type="email" placeholder="Email Address" required>
                    </div>
                    <div class="pure-control-group">
                        <label for="password">Password</label>
                        <input id="password" name="password" type="password" placeholder="Password" required>
                    </div>
                    <div class="pure-controls">
                        <button type="submit" class="pure-button pure-button-primary">Submit</button>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="pure-u-1-3">
            <form method="POST" action="{{ path_for('g.login') }}" class="pure-form pure-form-stacked">
                <fieldset>
                    <p>Login</p>
                    <div class="pure-control-group">
                        <label for="display-name">Username</label>
                        <input id="display-name" name="display-name" type="text" placeholder="Username" required>
                    </div>

                    <div class="pure-control-group">
                        <label for="password">Password</label>
                        <input id="password" name="password" type="password" placeholder="Password" required>
                    </div>

                    <div class="pure-controls">
                        <button type="submit" class="pure-button pure-button-primary">Submit</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}